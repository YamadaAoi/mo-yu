{
  "name": "mo-yu",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev-core": "pnpm --filter \"@mo-yu/core\" dev",
    "build-core": "pnpm --filter \"@mo-yu/core\" build",
    "dev-vue": "pnpm --filter \"@mo-yu/vue\" dev",
    "build-vue": "pnpm --filter \"@mo-yu/vue\" build",
    "lint": "eslint --cache packages/**/*.{ts,tsx,vue}"
  },
  "keywords": [
    "mo-yu",
    "component library",
    "ui framework",
    "ui",
    "vue"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@microsoft/api-documenter": "^7.19.27",
    "@microsoft/api-extractor": "^7.33.7",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-strip": "^3.0.2",
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "esbuild": "^0.16.14",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "rollup": "^3.9.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-visualizer": "^5.9.0",
    "simple-git-hooks": "^2.8.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "*.{ts,tsx,vue}": [
      "eslint --cache --fix"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "eslint",
        "typescript"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YamadaAoi/mo-yu"
  }
}
